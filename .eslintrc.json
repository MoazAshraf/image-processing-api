{
    "env": {
        "browser": true,
        "es2021": true,
        "jasmine": true
    },
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier",
        "jasmine"
    ],
    "rules": {
        "no-console": 1,        // Warning
        "prettier/prettier": 1  // Warning
    },
    "ignorePatterns": ["src/tests/helpers"]
}
